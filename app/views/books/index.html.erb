<h2>New book</h2>
<div class = "container">
  <div class = "row">
    <%= form_with model: @book, local:true do |f| %>
    <div class = "field">
      <%= f.label :title %><br />
      <%= f.text_field :title %>
    <div class = "field">
      <%= f.label :body %><br />
      <%= f.text_area :body %>
    </div>
    <div class = "actions">
      <%= f.submit "Create Book" %>
    </div>
    <% end %>

    <h2>Books</h2>
      <table class = "table table-hover">
         <thead>
           <tr>
             <th scope="col"></th>
             <th scope="col">Title</th>
             <th scope="col">Opinion</th>
             <th colspan="3"></th>
           </tr>
         </thead>
         <tbody>
           <% @books.each do |book| %>
           <tr>
             <td></td>
             <td><%= book.title %></td>
             <td><%= book.body %></td>
           </tr>
           <% end %>
         </tbody>
      </table>
    </div>
  </div>
</div>