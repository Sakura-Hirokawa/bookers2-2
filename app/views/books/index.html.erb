<div class = "container">
  <div class = "row">
      <h3>User info</h3>
      <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg" %>
      <table class = "table">
          <tbody>
               <tr>
                   <th scope="row">name</th>
                   <td><%= @user.name %></td>
               </tr>
               <tr>
                   <th scope="row">introduction</th>
                   <th><%= @user.introduction %></th>
               </tr>
          </tbody>
      </table>

      <h2>New book</h2>
      <%= form_with model: @book, local:true do |f| %>
      <div class = "field">
        <%= f.label :title %><br />
        <%= f.text_field :title %>
      </div>
      <div class = "field">
        <%= f.label :body %><br />
        <%= f.text_area :body %>
      </div>
      <div class = "actions">
        <%= f.submit "Create Book" %>
      </div>
      <% end %>
      
      <h2>Books</h2>
      <table class = "table table-hover">
         <thead>
           <tr>
             <th scope="col"></th>
             <th scope="col">Title</th>
             <th scope="col">Opinion</th>
             <th colspan="3"></th>
           </tr>
         </thead>
         <tbody>
           <% @books.each do |book| %>
           <tr>
             <td><%= attachment_image_tag book.user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg" %></td>
             <td><%= link_to book.title, book_path(book.id) %></td>
             <td><%= book.body %></td>
           </tr>
           <% end %>
         </tbody>
      </table>
  </div>
</div>